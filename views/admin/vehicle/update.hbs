{{>sidebar}}


<main id="main" class="main">

<h3>Update Vehicles</h3>

<!-- Display error message if it exists -->
{{#if errorMessage}}
    <p class="alert alert-danger alert-dismissible fade show">{{ errorMessage }}</p>
{{/if}}

<!-- Display success message if it exists -->
{{#if successMessage}}
    <p class="alert alert-success alert-dismissible fade show">{{ successMessage }}</p>
{{/if}}

<div class="tab-pane p-3 border border-5" id="profile-change-password">
        
        <form action="{{ baseUrl }}/admin/vehicle/update/action/{{ vehicle._id }}" method="post" enctype="multipart/form-data">

        <div class="row mb-3">
            <label for="email" class="col-md-4 col-lg-3 col-form-label">Type *</label>
            <div class="col-md-8 col-lg-9">
                <select name="type" id="type" class="form-control">
                     <option value="Truck" {{#if (eq vehicle.type "Truck")}}selected{{/if}}>Truck</option>
                     <option value="Ambulance" {{#if (eq vehicle.type "Ambulance")}}selected{{/if}}>Ambulance</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <label for="modelNo" class="col-md-4 col-lg-3 col-form-label">Model Number *</label>
            <div class="col-md-8 col-lg-9">
            <input name="modelNo" type="text" class="form-control" value="{{ vehicle.modelNo }}" id="modelNo" required>
            </div>
        </div>

        <div class="row mb-3">
            <label for="image" class="col-md-4 col-lg-3 col-form-label">Image</label>
            <div class="col-md-8 col-lg-9">
                <img src="/uploads/{{ vehicle.image }}" class="m-2" alt="" width="200px"><br>
            <input name="image" type="file" class="form-control" id="image">
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
        </form>

</div>
</main>